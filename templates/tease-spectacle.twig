{% extends "tease.twig" %}

{% block content %}



		<li class="rounded overflow-hidden shadow-lg">
			<a class="md:flex" href="{{ post.link }}">

				{% if post.thumbnail.src %}
					<img src="{{ post.thumbnail.src }}" alt="{{ post.title }}">
				{% endif %}
	  
			  <div class="px-6 py-4">
				<h2 class="font-bold text-xl mb-1">{{ post.title }}</h2>
				<h3 class="font-semibold text-lg mb-1">{{ post.artiste }}</h3>
				<p class="text-gray-700 mb-1">Du {{ post.date_de_debut|date('j F') }} au {{ post.date_de_fin|date('j F') }}</p>
				<p class="text-gray-700 text-sm mb-1">Dur√©e : {{ post.duree }}</p>
				<p class="text-gray-700 text-sm mb-2">{{ post.preview.length(20).read_more('') }}</p>
				{#{{ post.author }}#}
				{#{{ post.date }}#}
				{% if post.gratuit == true %}
					<span class="float-left text-white inline-block bg-gray-600 rounded-full px-3 py-1 text-sm font-semibold mr-1 mb-2">Gratuit</span>
				{% else %}
					{# Markup for plain text header #}
				{% endif %}
				<div class="">
				  {% for term in post.terms %}
					  {#{{ term.id }}#}
					  {#{{ term.slug }}#}
					  <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-1 mb-2">{{ term.name }}</span>
					  {#{{ term.taxonomy }}#}
					  {#{{ term.parent }}#}
				  {% endfor %}
				</div>
			  </div>
			</a>
		  </li>


{% endblock %}
